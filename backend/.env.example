# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fluow_ai?schema=public"

# Server
PORT=3333
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-this-too
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI APIs
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
GROQ_API_KEY=your-groq-api-key

# Evolution API (WhatsApp)
EVOLUTION_API_URL=https://your-evolution-api-url.com
EVOLUTION_API_KEY=your-evolution-api-key

# Public URL (for webhooks)
# Vercel automatically sets VERCEL_URL in production
# For local development with ngrok, leave empty (auto-detected)
# For custom domains, set this manually
PUBLIC_URL=

# Instagram
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Cors
CORS_ORIGIN=http://localhost:3000

# Sentry (optional)
SENTRY_DSN=
